  // Выполняем бинарный поиск
        int index = BinarySearch.binarySearch(data, searchItem, (java.util.Comparator) comparator);
        if (index >= 0) {
            System.out.println("Элемент найден на позиции: " + index);
        } else {
            System.out.println("Элемент не найден.");
        }
    }

    private static Bus createBus(Scanner scanner) {
        return new Bus.BusBuilder()
                .setNumber(Validator.validateIntInput(scanner, "Введите номер автобуса: "))
                .setModel(Validator.validateInput(scanner, "Введите модель автобуса: "))
                .setMileage(Validator.validateDoubleInput(scanner, "Введите пробег автобуса: "))
                .build();
    }

    private static User createUser(Scanner scanner) {
        return new User.UserBuilder()
                .setName(Validator.validateInput(scanner, "Введите имя пользователя: "))
                .setPassword(Validator.validateInput(scanner, "Введите пароль: "))
                .setEmail(Validator.validateEmail(scanner, "Введите email: "))
                .build();
    }

    private static Student createStudent(Scanner scanner) {
        return new Student.StudentBuilder()
                .setGroupNumber(Validator.validateIntInput(scanner, "Введите номер группы: "))
                .setAverageGrade(Validator.validateDoubleInput(scanner, "Введите средний балл: "))
                .setRecordBookNumber(Validator.validateIntInput(scanner, "Введите номер зачетной книжки: "))
                .build();
    }
}
